<%opt_algo, pre_select_algo, opt_config, pre_select_config, opt_species, pre_select_species = fill_selection_tags%>
<%= 
	form_tag(predict_genes_path, :remote => true, :class => "disabled", :id => "options_form") do
		content_tag(:table) do
			content_tag(:tr) do
				content_tag(:td, "Use BLAST low complexity filter") +
				content_tag(:td,
					check_box_tag(:blast, "1", false, :disabled => true)
				)
			end +
			content_tag(:tr) do
				content_tag(:td, "Reference species for gene prediction (Augustus)") +
				content_tag(:td,
					select_tag(:species, options_for_select(opt_species, pre_select_species), :disabled => true)
				)
			end +
			content_tag(:tr) do 
				content_tag(:td, "Alignment method") +
				content_tag(:td, 		
					select_tag(:algo, options_for_select(opt_algo, pre_select_algo), 
					onchange:  
					"if ($('#algo').val() == 'dialign' || $('#algo').val() == 'mafft' ) {$('#config').attr('disabled', 'disabled');} else {$('#config').removeAttr('disabled');}",
					:disabled => true)
				)
			end +
			content_tag(:tr) do
				content_tag(:td, "Alignment configuration") +
				content_tag(:td, 
					select_tag(:config, options_for_select(opt_config, pre_select_config), 
					:disabled => true)
				)
			end

			# content_tag(:tr) do
			# 	content_tag(:td, "Predict genes for five best BLAST hits") +
			# 	content_tag(:td, 
			# 		check_box_tag('multi')
			# 	)
			# end
		end +

		# uncomment if submit tag should be used
		# submit_tag("Use options")
		# comment if submit-tag should be used
		submit_tag("Start prediction", #class: "nice_button", 
			:id => "predict_button", 
			onclick: "hide_show_waiting('show');",
			# onclick: "periodically_show_stat();",
			:disabled => true)
	end
%>