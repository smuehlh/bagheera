<% if @fatal_error.blank? then %>
	hide_show_waiting('hide');
	$('#uploaded_files').html('<%=session[:file][:name]%>');
	$('#h2_set_options').show();
	<% new_content = escape_javascript(render(partial: "show_options"))%>
	$('#set_options').html('<%=new_content%>');
	$('#set_options').show();
	// hide results to avoid showing results of last file
	$('#results_section').hide();
<% else%>
	$('#uploaded_files').html('No file uploaded');
	// $('#options_section').hide();
	$('#h2_set_options').hide();
	$('#set_options').hide();
	$('#predict_button').hide();
	$('#results_section').hide();
	// show_error hides waiting animation
	show_error('<%=raw(@fatal_error.join("<br />"))%>');
	$('#example_file_field').show();
<% end%>