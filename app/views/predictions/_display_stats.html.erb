<%=
	heading_trna = "Identity of tRNA<sub>CAG</sub>"
	content_tag(:h3, heading_trna.html_safe) +
	
	content_tag(:table,
		content_tag(:tr, 
			content_tag(:td, @stats[:trna_score].to_s, :class => "first_col") +
			content_tag(:td, "Percent points tRNAscan-SE Score")
		) +
		content_tag(:tr, 
			content_tag(:td, @stats[:trna_ser].to_s, :class => "first_col") +
			content_tag(:td, "Alternative codon usage")
		) +
		content_tag(:tr, 
			content_tag(:td, @stats[:trna_leu].to_s, :class => "first_col") +
			content_tag(:td, "Standard codon usage")
		) +
		content_tag(:tr, 
			content_tag(:td, @stats[:trna_unknown].to_s, :class => "first_col") +
			content_tag(:td, "Indiscriminative")
		), 
		:class => "stats_table"
	) +

	content_tag(:h3, "Gene prediction") + 

	content_tag(:table,
		content_tag(:tr, 
			content_tag(:td, @stats[:n_prots].to_s, :class => "first_col") +
			content_tag(:td, "Predicted " + "protein".pluralize(@stats[:n_prots]) + " of #{@stats[:total_n_prots]} tested proteins")
		) +
		content_tag(:tr, 
			content_tag(:td, @stats[:n_prots_wo_ctg].to_s, :class => "first_col") +
			content_tag(:td, "Predicted " + "protein".pluralize(@stats[:n_prots]) + " contain CTG codons")
		) +
		# thers are all predicted CTG positions, independent of aligned CTG pos in ref data
		content_tag(:tr, 
			content_tag(:td, @stats[:pred_ctg].to_s, :class => "first_col") +
			content_tag(:td, "CTG " + "position".pluralize(@stats[:pred_ctg]) + " in predicted proteins")
		) +
		content_tag(:tr, 
			content_tag(:td, @stats[:pred_ctg_unaligned].to_s, :class => "first_col") +
			content_tag(:td, 
				"Position".pluralize(@stats[:pred_ctg_unaligned]) + " thereof are not aligned to reference data" )
		) +
		content_tag(:tr, 
			content_tag(:td, @stats[:contradiction_ref_chem_ref_ctg].to_s, :class => "first_col") +
			content_tag(:td, 
				"Predicted CTG " + "position".pluralize(@stats[:contradiction_ref_chem_ref_ctg]) + " where sequences similarity and CTG position conservation yield ambiguous results")
		),
		:class => "stats_table"
	) +
	content_tag(:h4, "Sequence similarity") +
	content_tag(:table, 
		content_tag(:tr, 
			content_tag(:td, @stats[:ref_chem_ser].to_s, :class => "first_col") +
			content_tag(:td, "Alternative codon usage")
		) +
		content_tag(:tr, 
			content_tag(:td, @stats[:ref_chem_leu].to_s, :class => "first_col") +
			content_tag(:td, "Standard codon usage")
		) +
		content_tag(:tr, 
			content_tag(:td, @stats[:ref_chem_unknown].to_s, :class => "first_col") +
			content_tag(:td, "Indiscriminative")
		),
	:class => "stats_table"
	) +

	content_tag(:h4, "CTG position conservation") +
	content_tag(:table, 
		content_tag(:tr, 
			content_tag(:td, @stats[:ref_ctg_ser].to_s, :class => "first_col") +
			content_tag(:td, "Alternative codon usage")
		) +
		content_tag(:tr, 
			content_tag(:td, @stats[:ref_ctg_leu].to_s, :class => "first_col") +
			content_tag(:td, "Standard codon usage")
		) +
		content_tag(:tr, 
			content_tag(:td, @stats[:ref_ctg_unknown].to_s, :class => "first_col") +
			content_tag(:td, "Indiscriminative")
		) +
		content_tag(:tr,
			content_tag(:td, @stats[:no_ref_ctg].to_s, :class => "first_col") +
			content_tag(:td, 
				"No CTG " + "codon".pluralize(@stats[:no_ref_ctg]) + " in reference data" )
		),
	:class => "stats_table"
	)
%>
